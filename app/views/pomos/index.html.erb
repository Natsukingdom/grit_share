<h1>今までの勉強履歴</h1>

<table class="table table-responsive">
  <thead class="thead-light">
    <tr>
      <th>勉強した時間</th>
      <th>コメント</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pomos.each do |pomo| %>
      <tr>
        <td><%= "#{pomo.passage_seconds / 60}分#{pomo.passage_seconds % 60}秒" %></td>
        <td><%= pomo.comment %></td>
        <td><%= link_to '詳細を確認する', user_pomo_url(@user, pomo) %></td>
        <td><%= link_to '消去する', user_pomo_url(@user, pomo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Pomoる！', new_user_pomo_path(@user), class: 'btn btn-info text-white' %>
<%= link_to 'ユーザ詳細画面へ', user_path(@user), class: 'btn btn-info text-white' %>
