<p id="notice"><%= notice %></p>

<h1>ユーザー</h1>

<table>
  <thead>
    <tr>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th>誕生日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td><%= user.birthday %></td>
        <td><%= link_to 'ユーザ詳細を確認する', user %></td>
        <% if user.id == current_user.id %>
          <td><%= link_to '登録情報を変更する', edit_user_registration_path %></td>
        <% end %>
        <td><%= link_to 'アカウントを削除する', user, method: :delete, data: { confirm: '本当に削除してもいいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

